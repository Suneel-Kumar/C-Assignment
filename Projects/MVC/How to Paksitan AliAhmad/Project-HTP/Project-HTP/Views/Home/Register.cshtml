@model tbl_User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/CustomStyleSheet/StyleSheetRegister.css" rel="stylesheet" />
</head>

<body>
<div id="registrationFormLayout">
    <div class="row">
        <div class="col-md-6" id="registrationForm">
            @using(Html.BeginForm("Register","Home", FormMethod.Post))
            {
                <h3>Registration Form</h3>
                <form class="form-horizontal">

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-6 col-md-2">
                            <input type="submit" value="Create" class="btn btn-primary"/>
                        </div>
                    </div>
                </form>
            }
        </div>
        <div class="col-md-6" id="registrationImage">
            <img src="~/Images/apple-addition01.png" class="img-responsive"/>
        </div>
    </div>

</div>

</body>


