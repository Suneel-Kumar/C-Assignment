@model tbl_Category
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using(Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class="col-md-2 text-right"})
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Name, new { @class="form-control", @Placeholder="Enter Name"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description,  new { @class = "col-md-2 text-right"})
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Description, new { @class="form-control", @placeholder="Enter Description"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-primary"/>
        </div>
    </div>
}

